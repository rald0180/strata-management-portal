{
  "rewrites": [
    {
      "source": "/old-home",
      "destination": "/index.html"
    }
  ],
  "regions": ["syd1"],

  "functions": {
    "api/get-maintenance.js": {
      "runtime": "edge"
    },
    "api/get-notices.js": {
      "runtime": "edge"
    },
    "api/process-payment.js": {
      "runtime": "edge"
    }
  },

  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}